# Server Configuration
NODE_ENV=development
PORT=3001

# JWT Configuration
JWT_SECRET=documaster-super-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DEFAULT_DB=documaster_default

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800

# Allowed File Extensions (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt,.jpg,.jpeg,.png,.gif,.mp4,.webm

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug
